<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:label="Vedh"
        android:icon="@drawable/vedh_icon"
        tools:context=".MainActivity" android:id="@string/app_name"
        android:background="@drawable/bg">
    <Button
            android:text="@string/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/add"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="170dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="124dp" android:layout_marginStart="124dp"
            android:width="125dp"
    />
    <Button
            android:text="@string/subtract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/subtract"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="124dp" android:layout_marginStart="124dp" android:width="125dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="270dp"/>
    <Button
            android:text="@string/multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/multiply"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="370dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="124dp" android:layout_marginStart="124dp"
            android:width="125dp"/>
    <!--Button
            android:text="@string/tables"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tables"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="470dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="124dp" android:layout_marginStart="124dp"
            android:width="125dp"/-->
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>